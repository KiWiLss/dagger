<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <HorizontalScrollView
        android:id="@+id/hsv_horizontal_outer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_horizontal_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="one"
                />

            <Button
                android:id="@+id/btn_horizontal_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="two"
                />
            <Button
                android:id="@+id/btn_horizontal_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="three"
                />
            <Button
                android:id="@+id/btn_horizontal_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="four"
                />

            <Button
                android:id="@+id/btn_horizontal_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="five"
                />
            <Button
                android:id="@+id/btn_horizontal_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="six"
                />
            <Button
                android:id="@+id/btn_horizontal_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="seven"
                />
            <Button
                android:id="@+id/btn_horizontal_eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="eight"
                />
            <Button
                android:id="@+id/btn_horizontal_nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nine"
                />
            <Button
                android:id="@+id/btn_horizontal_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ten"
                />
        </LinearLayout>
    </HorizontalScrollView>


    <Button
        android:id="@+id/btn_horizontal_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用recyclerview实现"
        android:layout_marginLeft="100dp"
        />

</LinearLayout>