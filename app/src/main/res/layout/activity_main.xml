<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_main_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="广播动态注册"
            android:onClick="broadcastOne"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="广播静态注册,无序"
            android:onClick="broadcastTwo"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="本地广播"
            android:onClick="localReceiver"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一般服务"
            android:onClick="serviceListener"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绑定服务"
            android:onClick="serviceBindListener"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="前台服务"
            android:onClick="intentserviceBindListener"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xml"
            android:onClick="xmlListener"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="定时"
            android:onClick="alarmListener"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="contentprovider"
            android:onClick="contentListener"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="searchview"
            android:onClick="searchView"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="流式布局"
            android:onClick="flexboxListener"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="布局动画"
            android:onClick="layoutanim"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="recyclerview实现viewpger"
            android:onClick="rvvpListener"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="测试背景"
                android:textColor="#fff"
              android:background="#0f0"
                android:layout_margin="10dp"/>


        </android.support.v7.widget.CardView>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="constrianlayout"
            android:onClick="constrianlayout"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="webview"
            android:onClick="webviewListener"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="textviewwb"
            android:onClick="textviewListener"/>

        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rv-one"
        android:onClick="trvOneListener"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="阴影测试"
            android:onClick="showLayout"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="supertextview"
            android:onClick="supertextview"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RecyclerView使用"
            android:textAllCaps="false"
            android:onClick="rvUse"/>
    </LinearLayout>

</ScrollView>