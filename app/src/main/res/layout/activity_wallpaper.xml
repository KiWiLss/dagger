<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_wallpaper_icon"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <Button
        android:id="@+id/btn_wallpaper_get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取网络图片"
        />
    <Button
        android:id="@+id/btn_wallpaper_setR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置当前壁纸"
        />
    <Button
        android:id="@+id/btn_wallpaper_choice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="glide测试"
        />

    <Button
        android:id="@+id/btn_wallpaper_glide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="glide库测试"
        />
</LinearLayout>